{
  "name": "@construct/core",
  "version": "0.1.0",
  "description": "Construct Messenger Core - Rust/WASM engine",
  "main": "./bindings/index.js",
  "types": "./bindings/index.d.ts",
  "type": "module",
  "files": [
    "bindings/**/*",
    "pkg/**/*"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --release --out-dir pkg",
    "build:dev": "wasm-pack build --target web --dev --out-dir pkg",
    "test": "wasm-pack test --headless --firefox",
    "test:chrome": "wasm-pack test --headless --chrome",
    "clean": "rm -rf pkg target"
  },
  "keywords": [
    "wasm",
    "rust",
    "e2ee",
    "messenger",
    "encryption"
  ],
  "author": "Construct Team",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./bindings/index.js",
      "types": "./bindings/index.d.ts"
    }
  }
}
